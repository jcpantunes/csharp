<Window x:Class="GEP_DE607.RealizarCarga"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Carga de dados" Height="300" Width="1000">
    <Grid>

        <GroupBox x:Name="groupCargaUsuario" Header="Carga de Usuarios" Margin="10,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
    		    Width="970" Height="100" BorderBrush="Black" BorderThickness="1" >

            <Grid>
                <Label x:Name="lblArquivo" Content="Arquivo" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <TextBox x:Name="txtUpload" Margin="10,30,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" 
    		        VerticalAlignment="Top" Height="25" Width="600" IsEnabled="False" />

                <Button x:Name="btnUpload" Content="Selecionar" Margin="640,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" 
    		        Width="75" Click="btnUpload_Click" RenderTransformOrigin="0.4,0.636"/>

                <Button x:Name="btnConfirmar" Content="Confirmar" Margin="730,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" 
    		        Width="75" Click="btnConfirmar_Click"/>

            </Grid>
        </GroupBox>

    </Grid>
</Window>
