<Window x:Class="GEP_DE607.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="Auto" Width="Auto" LastChildFill="False" 
                   Margin="0,10,0,0" VerticalAlignment="Top" />

        <Menu x:Name="mnu" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="60" Width="500">

            <Button x:Name="btnCarga" Margin="10,5,0,0" Content="Carga" HorizontalAlignment="Left" Click="btnCarga_Click" Width="60" Height="40" />
            
            <Button x:Name="btnProjeto" Margin="10,5,0,0" Content="Projeto" HorizontalAlignment="Left" Click="btnProjeto_Click" Width="60" Height="40" />

            <Button x:Name="btnSolicitacao" Margin="10,5,0,0" Content="Solicitacao" HorizontalAlignment="Left" Click="btnSolicitacao_Click" Width="60" Height="40" />

            <Button x:Name="btnIndicadores" Margin="10,5,0,0" Content="Indicadores" HorizontalAlignment="Left" Click="btnIndicadores_Click" Width="60" Height="40" />

            <Button x:Name="btnDados" Margin="10,5,0,0" Content="Dados" HorizontalAlignment="Left" Click="btnDados_Click" Width="60" Height="40" />

        </Menu>

    </Grid>
</Window>
