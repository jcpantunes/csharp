<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:PropertyInspector="clr-namespace:Microsoft.Expression.DesignSurface.UserInterface.PropertyInspector;assembly=Microsoft.Expression.DesignSurface" x:Class="GEP_DE611.visao.VisualizarIndicador"
        Title="VisualizarIndicador" Height="900" Width="1200">
    <Grid>
        <GroupBox x:Name="groupNumItemTrabalhados" Header="Número de Itens de Backlog Trabalhados" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
			Width="1170" Height="500" BorderBrush="Black" BorderThickness="1" >
            <Grid>
                <Label x:Name="lblLotacao" Content="Lotacao" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <ComboBox x:Name="cmbLotacao" Margin="10,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" SelectionChanged="cmbLotacao_SelectionChanged" />

                <Label x:Name="lblFuncionario" Content="Funcionario" Margin="10,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <ComboBox x:Name="cmbFuncionario" Margin="10,75,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" />

                <Label x:Name="lblProjeto" Content="Projeto" Margin="240,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <ComboBox x:Name="cmbProjeto" Margin="240,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" SelectionChanged="cmbProjeto_SelectionChanged" />

                <Label x:Name="lblSprint" Content="Sprint" Margin="470,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <ListBox x:Name="lstSprint" Margin="470,25,0,0" SelectionMode="Extended" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="100" />

                <Button x:Name="btnNumItemTrabalhado" Content="Atualizar" Margin="700,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="btnNumItemTrabalhado_Click" />

                <DataGrid x:Name="tblNumItemTrabalhado" Margin="10,170,0,0"  HorizontalAlignment="Left"  ItemsSource="{Binding}"
					VerticalAlignment="Top" Width="1130" Height="400" AutoGenerateColumns="False" IsReadOnly="True" />

            </Grid>
        </GroupBox>



    </Grid>
</Window>
