<Window x:Class="GEP_DE611.visao.VisualizarIndicador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VisualizarIndicador" Height="900" Width="1200">
    <Grid>
        <GroupBox x:Name="groupNumItemTrabalhados" Header="Número de Itens de Backlog Trabalhados" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
    		    Width="1170" Height="500" BorderBrush="Black" BorderThickness="1" >
            <Grid>
                <Label x:Name="lblLotacao" Content="Lotacao" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <ComboBox x:Name="cmbLotacao" Margin="10,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" SelectionChanged="cmbLotacao_SelectionChanged" />

                <Label x:Name="lblFuncionario" Content="Funcionario" Margin="240,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <ComboBox x:Name="cmbFuncionario" Margin="240,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" />
                
                <Button x:Name="btnNumItemTrabalhado" Content="Atualizar" Margin="470,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="btnNumItemTrabalhado_Click" />

                <DataGrid Name="tblNumItemTrabalhado" Margin="10,70,0,0"  HorizontalAlignment="Left" 
                          VerticalAlignment="Top" Width="1130" Height="400" AutoGenerateColumns="False" IsReadOnly="True" >
                    
                </DataGrid>
            </Grid>
        </GroupBox>


    </Grid>
</Window>
